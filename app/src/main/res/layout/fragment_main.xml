<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hrtz.pos.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:elevation="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi POS Android"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableTop="@drawable/ic_shopping_cart_white_48dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:text="Daftar Barang"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/btnPenjualan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnInventory"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableTop="@drawable/ic_attach_money_white_48dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:text="Manajemen Penjualan"
        android:textColor="#ffff"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnPembelian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPenjualan"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableTop="@drawable/ic_unarchive_white_48dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:text="Manajemen Pembelian"
        android:textColor="#ffff"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:onClick="onClick"/>


</RelativeLayout>
